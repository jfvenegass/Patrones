{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2019",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "test",
    "**/*.spec.ts",
    "../reports-web",
    "../reports-web/**",
    "reports-web",
    "reports-web/**"
  ],
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "cliCompilerOptions": {
    "tsConfigPath": "tsconfig.build.json"
  }
}



